= form_with(model: player) do |form|
  - if player.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(player.errors.count, "error")
        prohibited this player from being saved:
      %ul
        - player.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :username, style: "display: block"
    = form.text_field :username
  %div
    = form.label :wins, style: "display: block"
    = form.number_field :wins
  %div
    = form.submit
